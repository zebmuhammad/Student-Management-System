<h1 class="h3 mb-3 d-flex align-items-center gap-2"><i class="bi bi-person-plus-fill"></i> Add Student</h1>

<% if (errors && errors.length) { %>
  <div class="alert alert-danger">
    <ul class="mb-0">
      <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
    </ul>
  </div>
<% } %>

<div class="card shadow-sm">
  <div class="card-body">
    <form action="/students" method="post" class="needs-validation" novalidate>
      <%- include('students/parts/form', { values }) %>
      <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary" type="submit"><i class="bi bi-check2 me-1"></i>Create</button>
        <a class="btn btn-secondary" href="/students"><i class="bi bi-x-lg me-1"></i>Cancel</a>
      </div>
    </form>
  </div>
</div>


