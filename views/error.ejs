<div class="text-center py-5">
  <div class="mb-4">
    <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
  </div>
  
  <h1 class="display-4 fw-bold text-danger mb-3">
    <%= typeof status !== 'undefined' ? status : 'Error' %>
  </h1>
  
  <h2 class="h4 text-muted mb-4">
    <%= typeof message !== 'undefined' ? message : 'Something went wrong' %>
  </h2>
  
  <div class="row justify-content-center">
    <div class="col-md-6">
      <p class="lead text-muted mb-4">
        We're sorry, but the page you're looking for cannot be found or an error has occurred.
      </p>
      
      <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <a href="/" class="btn btn-primary btn-lg">
          <i class="bi bi-house-door me-2"></i>Go Home
        </a>
        <a href="/students" class="btn btn-outline-secondary btn-lg">
          <i class="bi bi-people me-2"></i>View Students
        </a>
        <button onclick="history.back()" class="btn btn-outline-info btn-lg">
          <i class="bi bi-arrow-left me-2"></i>Go Back
        </button>
      </div>
    </div>
  </div>
  
  <% if (typeof status !== 'undefined' && status === 404) { %>
    <div class="mt-5">
      <div class="card border-0 bg-light">
        <div class="card-body">
          <h5 class="card-title">Looking for something specific?</h5>
          <p class="card-text">Try searching for students or browse through our department listings.</p>
          <a href="/students" class="btn btn-primary">Browse Students</a>
        </div>
      </div>
    </div>
  <% } %>
</div>
